@model Tactsoft.Core.Entities.PurchaseDetail
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Purchase Master Information</h3>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row mt-2">
                            <div class="col-md-6">

                                <div class="row mb-2">
                                    <label asp-for="PurchaseId" class="col-md-3 col-form-label">Supplier</label>
                                    <div class="col-md-9">
                                        <select asp-for="PurchaseId" class="form-control" asp-items="@(ViewBag.PurchaseId)">
                                            <option value="">Select Purchase</option>
                                        </select>
                                        <span asp-validation-for="PurchaseId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="ItemId" class="col-md-3 col-form-label">Supplier</label>
                                    <div class="col-md-9">
                                        <select asp-for="ItemId" class="form-control" asp-items="@(ViewBag.ItemId)">
                                            <option value="">Select Purchase</option>
                                        </select>
                                        <span asp-validation-for="ItemId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Qty" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Qty" class="form-control" />
                                        <span asp-validation-for="Qty" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Rate" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Rate" class="form-control" />
                                        <span asp-validation-for="Rate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-rotate"></i> Update
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }